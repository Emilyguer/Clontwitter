<div class="container">
<div class="alert alert-success <%= 'd-none' if notice.blank? %>">
  <%= notice %>
</div>


  <h1>Timeline</h1>

  <%= link_to "Nuevo tweet", new_tweet_path, class: "btn btn-primary mt-3" %>

  <%= form_tag(tweets_path, method: :get, class: "form-inline mt-3") do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Buscar tweets..." %>
      <div class="input-group-append">
        <%= submit_tag "Buscar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <div id="tweets" class="mt-3">
    <% @tweets.each do |tweet| %>
      <div class="card mb-3">
        <div class="card-body">
          <%= render tweet %>
          <p class="card-text mt-2">
            <%= link_to "Mostrar este tweet", tweet, class: "btn btn-link" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>

<%= will_paginate @tweets %>

<div class="text-center mt-3 mb-3">
  <%= link_to 'Cargar mÃ¡s tweets', tweets_path(page: @tweets.next_page), class: 'btn btn-primary' %>
</div>
</div>
