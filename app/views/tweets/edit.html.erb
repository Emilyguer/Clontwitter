<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">Editar tweet</div>
        <div class="card-body">
          <%= render "form", tweet: @tweet %>
        </div>
      </div>
      <div class="mt-3 text-center">
        <%= link_to "Mostrar este tweet", @tweet, class: "btn btn-info mr-2" %>
        <%= link_to "Volver a los tweets", tweets_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
