<div class="container show mt-5">
  <div class="row justify-content-center bg-white">
    <div class="col-md-8">
    <div class="alert alert-success <%= 'd-none' if notice.blank? %>">
        <%= notice %>
      </div>
      <%= render @tweet %>
      <div class="mt-3">
        <%= link_to "Editar este tweet", edit_tweet_path(@tweet), class: "btn btn-primary mr-2" %>
        <%= link_to "Volver a los tweets", tweets_path, class: "btn btn-secondary" %>
        <%= button_to "Eliminar este tweet", @tweet, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn btn-danger", form_class: "d-inline-block" %>
      </div>
    </div>
  </div>
</div>
